<% layout('layouts/boilerplate') %>

<h1>
    <%= campground.title %>
</h1>
<h2>
    <%= campground.location %>
</h2>
<img src="<%=  campground.image %>" alt="Campground Image">
<p><%= campground.description %></p>
<footer>
    <button><a href="/campgrounds/<%= campground.id %>/edit">Edit</a></button>
    <button><a href="/campgrounds">All campgrounds</a></button>
    <form action="/campgrounds/<%= campground.id %>?_method=DELETE" method="POST">
        <button>Delete</button>
    </form>
</footer>